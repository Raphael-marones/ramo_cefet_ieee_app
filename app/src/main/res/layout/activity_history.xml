<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="raphaelsantos.ramo_ieee_cefet_rj.Activities.HistoryActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:layout_margin="24dp" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/Histories"
            android:text="@string/history"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:textColor="#FFFFFF"
            android:textStyle="normal|bold"
            android:textSize="36sp"
            android:textAllCaps="true" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:background="@drawable/pagebreak_white"/>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:orientation="vertical">


            <TextView
                android:text="@string/history_sect1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Title.Inverse"
                android:id="@+id/histSect1" />
            <TextView
                android:text="@string/loading_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium.Inverse"
                android:id="@+id/histBody1" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="@drawable/pagebreaker" />
                <!--android:background="@drawable/single_line_offwhite"-->

            <TextView
                android:text="@string/history_sect2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Title.Inverse"
                android:id="@+id/histSect2" />
            <TextView
                android:text="@string/loading_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium.Inverse"
                android:id="@+id/histBody2" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="@drawable/pagebreaker" />

            <TextView
                android:text="@string/history_sect3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Title.Inverse"
                android:id="@+id/histSect3" />
            <TextView
                android:text="@string/loading_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium.Inverse"
                android:id="@+id/histBody3" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="@drawable/pagebreaker" />

            <TextView
                android:text="@string/history_sect4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Title.Inverse"
                android:id="@+id/histSect4" />
            <TextView
                android:text="@string/loading_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium.Inverse"
                android:id="@+id/histBody4" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="@drawable/pagebreaker" />

            <TextView
                android:text="@string/history_sect5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Title.Inverse"
                android:id="@+id/histSect5" />
            <TextView
                android:text="@string/loading_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium.Inverse"
                android:id="@+id/histBody5" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="@drawable/pagebreaker" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Faça parte dessa história"
                android:id="@+id/applyingfor" />
            </LinearLayout>


    </ScrollView>

</LinearLayout>